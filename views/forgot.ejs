<div class="form-wrapper">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6 d-none d-lg-inline">
        <figure class="mb-5">
          <img class="img-fluid" src="dist/images/reset-password.svg" alt="" />
        </figure>
      </div>
      <div class="col-lg-4 offset-lg pt-4">
        <div class="logo text-center text-lg-left">
          <img src="dist/images/logo.png" alt="logo" />
        </div>
        <div class="my-5 text-center text-lg-left">
          <h3 class="font-weight-bold mb-3">Reset Password</h3>
          <p class="text-muted">Type and send the email address to reset your password.</p>
        </div>
        <div class="card">
          <div class="card-body">
            <%- include ("./messages") %>
            <form action="/auth/forgot" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <div class="form-icon-wrapper">
                  <input type="email" class="form-control" id="email" placeholder="Enter email" autofocus required />
                  <i class="form-icon-left mdi mdi-email"></i>
                </div>
              </div>
              <div class="text-center text-lg-left">
                <button type="submit" class="btn btn-primary">Send</button>
              </div>
              <div class="text-divider">or</div>
              <p class="text-center">You can now <a href="/auth/login">sign in</a> or <a href="/auth/register">create an account</a>.</p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
