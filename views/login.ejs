<div class="form-wrapper">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6 d-none d-lg-inline">
        <figure class="mb-5">
          <img class="img-fluid" src="/assets/images/sign-in.svg" alt="" />
        </figure>
      </div>
      <div class="col-lg-4 offset-lg">
        <div class="logo text-center text-lg-left">
          <img src="/assets/images/logo.png" alt="logo" />
        </div>
        <div class="my-5 text-center text-lg-left">
          <h3 class="font-weight-bold mb-3">Sign In</h3>
          <p class="text-muted">Sign in Taufiq Project to Post Your Blog</p>
        </div>
        <div class="card">
          <div class="card-body">
            <%- include ("./messages") %>
            <form action="/auth/login" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <div class="form-icon-wrapper">
                  <input type="email" class="form-control" id="email" placeholder="Enter email" autofocus required />
                  <i class="form-icon-left mdi mdi-email"></i>
                </div>
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <div class="form-icon-wrapper">
                  <input type="password" class="form-control" id="password" placeholder="Enter password" required />
                  <i class="form-icon-left mdi mdi-lock"></i>
                </div>
              </div>
              <div class="text-center text-lg-left">
                <button type="submit" class="btn btn-primary">Sign In</button>
              </div>
            </form>
            <div class="my-4 text-center text-lg-left">
              <a href="/auth/forgot"><p class="text-muted">Forgot Password?</p></a>
            </div>
            <div class="text-divider">or</div>
            <p class="text-center">
              Don't have an account?
              <a href="/auth/register">Create a free account</a>.
            </p>
            <div class="social-links justify-content-center">
              <a href="#" class="bg-google">
                <i class="mdi mdi-google"></i>
              </a>
              <a href="#" class="bg-facebook">
                <i class="mdi mdi-facebook"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
