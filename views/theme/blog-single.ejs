<div class="page-body">
  <div class="container-fluid">
    <div class="page-title">
      <div class="row">
        <div class="col-6">
          <h3>Blog Single</h3>
        </div>
        <div class="col-6">
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="/dashboard">
                <svg class="stroke-icon">
                  <use href="/assets/dashboard/svg/icon-sprite.svg#stroke-home"></use>
                </svg>
              </a>
            </li>
            <li class="breadcrumb-item">Apps</li>
            <li class="breadcrumb-item active">Blog Single</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
  <!-- Container-fluid starts-->
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-12">
        <div class="blog-single">
          <div class="blog-box blog-details">
            <img class="img-fluid w-100" src="https://gudrtdnruivalvgpfens.supabase.co/storage/v1/object/public/taufiqproject/blog/<%= blog.image %>" alt="blog-main" />
            <div class="blog-details">
              <ul class="blog-social">
                <li>
                  <span>Date:</span> <%= new Date(blog.date).toLocaleDateString("en-US", { year: 'numeric', month: 'long', day: 'numeric' }) %>, <span>Time:</span> <%= new Date(blog.date).toLocaleTimeString("en-US", { hour: '2-digit',
                  minute: '2-digit' }) %>
                </li>
                <li><i class="icofont icofont-user"></i><%= blog.author %></li>
                <li><i class="icofont icofont-thumbs-up"></i><%= blog.likes %><span> Likes</span></li>
                <li><i class="icofont icofont-ui-chat"></i><%= blog.comments %> Comments</li>
              </ul>
              <h4><%- blog.title %></h4>
              <div class="single-blog-content-top"><%- blog.content %></div>
            </div>
          </div>
          <section class="comment-box">
            <h4>Comment</h4>
            <!-- ... bagian komentar blog ... -->
          </section>
        </div>
      </div>
    </div>
  </div>
  <!-- Container-fluid Ends-->
</div>
